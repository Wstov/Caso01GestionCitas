@model List<GestionDeCitasBLL.Dtos.VehiculoDto>
@{
    ViewData["Title"] = "Vehículos";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Vehículos</h2>
    <button class="btn btn-primary" id="btnNuevo">Nuevo</button>
</div>

<table id="tblVehiculos" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Placa</th>
            <th>Marca</th>
            <th>Año</th>
            <th>ClienteId</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Id</td>
                <td>@v.Placa</td>
                <td>@v.Marca</td>
                <td>@v.Anio</td>
                <td>@v.ClienteId</td>
                <td>
                    <button class="btn btn-sm btn-warning btn-edit"
                            data-id="@v.Id"
                            data-placa="@v.Placa"
                            data-marca="@v.Marca"
                            data-anio="@v.Anio"
                            data-clienteid="@v.ClienteId">
                        Editar
                    </button>
                    <button class="btn btn-sm btn-danger btn-del" data-id="@v.Id">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="mainModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog"><div class="modal-content" id="modalContent"></div></div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(function () {
        const table = $('#tblVehiculos').DataTable();

        $('#btnNuevo').on('click', function () {
            $('#modalContent').load('/Vehiculos/Create', function () { $('#mainModal').modal('show'); });
        });

        $('#tblVehiculos').on('click', '.btn-edit', function () {
            const b = $(this).data();
            const qs = $.param(b);
            $('#modalContent').load('/Vehiculos/Edit?' + qs, function () { $('#mainModal').modal('show'); });
        });

        $('#tblVehiculos').on('click', '.btn-del', function () {
            const id = $(this).data('id');
            $('#modalContent').load('/Vehiculos/Delete?id=' + id, function () { $('#mainModal').modal('show'); });
        });
    });
</script>
